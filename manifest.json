{
  "name": "__MSG_extName__",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "ja",

  "description": "__MSG_extDescription__",

  "background": {
    "page": "pages/background.html"
  },

  "sandbox": {
    "pages": [
      "pages/sandbox.html"
    ]
  },

  "browser_action": {
    "default_title": "Activity Popup",
    "default_popup": "pages/popup.html"
  },

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
